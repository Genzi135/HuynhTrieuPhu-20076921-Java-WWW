<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="HuynhTrieuPhu-20076921-week2">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>backend.models.Customer</class>
        <class>backend.models.Employee</class>
        <class>backend.models.Order</class>
        <class>backend.models.OrderDetail</class>
        <class>backend.models.Product</class>
        <class>backend.models.ProductPrice</class>
        <class>backend.models.ProductImage</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/week2?createDatabaseIfNotExist"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="sapassword"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <!--    <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            -->
        </properties>
    </persistence-unit>
</persistence>
